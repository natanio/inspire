<div class="signup">
	<h2>Forgot your password?</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "user-form "}) do |f| %>
	  <%= devise_error_messages! %>

	  <p class="float">
	  	<%= f.label :email do %>
	  	<span class="glyphicon glyphicon-envelope"></span> email
	  	<% end %>
	    <%= f.email_field :email, autofocus: true, placeholder:"Enter your email" %>
  	  </p>

	<div class="user-submit-wrap">
	    <p class="clearfix">
	    	<%= f.submit "Send me reset password instructions", class: "user-submit" %>
	    </p>
	    <%= render "devise/shared/links" %>
	</div>
	<% end %>
</div>