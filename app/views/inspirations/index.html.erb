<h1>Listing inspirations</h1>

<table>
  <thead>
    <tr>
      <th>Quote</th>
      <th>Page number</th>
      <th>Likes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @inspirations.each do |inspiration| %>
      <tr>
        <td><%= inspiration.quote %></td>
        <td><%= inspiration.page_number %></td>
        <td><%= inspiration.likes %></td>
        <td><%= link_to 'Show', book_inspiration_path %></td>
        <td><%= link_to 'Edit', edit_inspiration_path(inspiration) %></td>
        <td><%= link_to 'Destroy', inspiration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

