<div class="box panel panel-default" style="cursor: pointer;" data-toggle="modal" data-target="#inspirationModal<%= inspiration.id %>">
  <div class="panel-body" data-inspiration="<%= inspiration.quote %>" data-inspiration-page="<%= inspiration.page_number %>" 
  data-comments="<%= inspiration.comments.to_json %>">
  
    <%= inspiration.quote %>
    <br>
 
    <%= link_to book_inspiration_path(inspiration.book_id, inspiration) do %>
	    <span class="glyphicon glyphicon-comment"></span> <%= inspiration.comments.size %>
    <% end %>
  </div>
</div>
 
<%= render partial: 'inspirations/modal', locals: { inspiration: inspiration } %>

<script>
  $(function()
  {
    $('.scroll-pane').jScrollPane();
  });
</script>