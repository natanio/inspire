<h1>Listing comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Inspiration</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.user_id %></td>
        <td><%= comment.inspiration_id %></td>
        <td><%= link_to 'Show', book_inspiration_comment_path(@book, @inspiration, comment) %></td>
        <td><%= link_to 'Edit', edit_book_inspiration_comment_path(@book, @inspiration, comment) %></td>
        <td><%= link_to 'Destroy', book_inspiration_comment_path(@book, @inspiration, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_book_inspiration_comment_path(@book, @inspiration) %>
