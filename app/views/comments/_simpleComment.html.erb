<%= form_for [@book, inspiration, @comment], :html => { :class => "comment-form", remote: true } do |f| %>
<%= f.hidden_field :inspiration_id %> 
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :content, placeholder: "Add a comment & hit enter.", :id => 'comment_submit' + inspiration.id.to_s %>
  </div>

<% end %>